[
    {
        "question": "<span style=\"font-family:'Cambria Math'\"> What is the official language of Bangladesh, a neighbouring country of India?</span><p style=\"margin-top:0pt;margin-bottom:10pt;line-height:115%;font-size:12pt\"><span style=\"font-family:'Cambria Math'\">SSC MTS 12/05/2023 (Evening)</span></p>",
        "option_1": "<span style=\"font-family:'Cambria Math'\"> Bengali</span>",
        "option_2": "<span style=\"font-family:'Cambria Math'\"> Urdu</span>",
        "option_3": "<span style=\"font-family:'Cambria Math'\"> Dzongkha</span>",
        "option_4": "<span style=\"font-family:'Cambria Math'\"> Hindi</span>",
        "option_5": "",
        "answer": "1",
        "solution": "<p style=\"margin-top:0pt;margin-left:36pt;margin-bottom:0pt;text-indent:-18pt;line-height:115%;font-size:12pt\"><span style=\"font-family:'Wingdings'\"></span><span style=\"font-family:'Cambria Math'\">The </span><span style=\"font-weight:bold;font-family:'Cambria Math'\">official language of Bangladesh</span><span style=\"font-family:'Cambria Math'\"> is </span><span style=\"font-weight:bold;font-family:'Cambria Math'\">Bengali (Bangla)</span><span style=\"font-family:'Cambria Math'\">.</span></p><p style=\"margin-top:0pt;margin-left:36pt;margin-bottom:0pt;text-indent:-18pt;line-height:115%;font-size:12pt\"><span style=\"font-family:'Wingdings'\"></span><span style=\"font-family:'Cambria Math'\">Spoken by over </span><span style=\"font-weight:bold;font-family:'Cambria Math'\">98%</span><span style=\"font-family:'Cambria Math'\"> of the population, it is used in </span><span style=\"font-weight:bold;font-family:'Cambria Math'\">government, education, and media</span><span style=\"font-family:'Cambria Math'\">.</span></p><p style=\"margin-top:0pt;margin-left:36pt;margin-bottom:0pt;text-indent:-18pt;line-height:115%;font-size:12pt\"><span style=\"font-family:'Wingdings'\"></span><span style=\"font-family:'Cambria Math'\">The </span><span style=\"font-weight:bold;font-family:'Cambria Math'\">1952 Language Movement</span><span style=\"font-family:'Cambria Math'\"> led to its official recognition after protests against the imposition of Urdu.</span></p><p style=\"margin-top:0pt;margin-left:36pt;margin-bottom:10pt;text-indent:-18pt;line-height:115%;font-size:12pt\"><span style=\"font-family:'Wingdings'\"></span><span style=\"font-family:'Cambria Math'\">In memory of this, </span><span style=\"font-weight:bold;font-family:'Cambria Math'\">21st February is observed as International Mother Language Day</span><span style=\"font-family:'Cambria Math'\">.</span></p><p style=\"margin-top:0pt;margin-bottom:10pt;line-height:115%;font-size:12pt\"><span style=\"font-weight:bold;text-decoration:underline;font-family:'Cambria Math'\">Additional Facts:</span></p><p style=\"margin-top:0pt;margin-left:36pt;margin-bottom:0pt;text-indent:-18pt;line-height:115%;font-size:12pt\"><span style=\"font-family:'Wingdings'\"></span><span style=\"font-family:'Cambria Math'\">Bengali is written in the </span><span style=\"font-weight:bold;font-family:'Cambria Math'\">Bengali script</span><span style=\"font-family:'Cambria Math'\">, also used in </span><span style=\"font-weight:bold;font-family:'Cambria Math'\">West Bengal (India)</span><span style=\"font-family:'Cambria Math'\">.</span></p><p style=\"margin-top:0pt;margin-left:36pt;margin-bottom:0pt;text-indent:-18pt;line-height:115%;font-size:12pt\"><span style=\"font-family:'Wingdings'\"></span><span style=\"font-family:'Cambria Math'\">It is one of the </span><span style=\"font-weight:bold;font-family:'Cambria Math'\">richest literary languages</span><span style=\"font-family:'Cambria Math'\">, and </span><span style=\"font-weight:bold;font-family:'Cambria Math'\">Rabindranath Tagore</span><span style=\"font-family:'Cambria Math'\"> wrote national anthems of both India and Bangladesh in Bengali.</span></p><p style=\"margin-top:0pt;margin-left:36pt;margin-bottom:10pt;text-indent:-18pt;line-height:115%;font-size:12pt\"><span style=\"font-family:'Wingdings'\"></span><span style=\"font-family:'Cambria Math'\">Although </span><span style=\"font-weight:bold;font-family:'Cambria Math'\">English</span><span style=\"font-family:'Cambria Math'\"> is not an official language, it is widely used in </span><span style=\"font-weight:bold;font-family:'Cambria Math'\">higher education and government affairs</span><span style=\"font-family:'Cambria Math'\">.</span></p>"
    },
    {
        "question": "<span style=\"font-family:'Cambria Math'\"> Sri Lanka got independence in the year:</span><p style=\"margin-top:0pt;margin-bottom:10pt;line-height:115%;font-size:12pt\"><span style=\"font-family:'Cambria Math'\">Higher Secondary 04/08/2022 (Shift- 3)</span></p>",
        "option_1": "<span style=\"font-family:'Cambria Math'\"> 1948 </span>",
        "option_2": "<span style=\"font-family:'Cambria Math'\"> 1950 </span>",
        "option_3": "<span style=\"font-family:'Cambria Math'\"> 1947 </span>",
        "option_4": "<span style=\"font-family:'Cambria Math'\"> 1949</span>",
        "option_5": "",
        "answer": "1",
        "solution": "<p style=\"margin-top:0pt;margin-left:36pt;margin-bottom:0pt;text-indent:-18pt;line-height:115%;font-size:12pt\"><span style=\"font-family:'Wingdings'\"></span><span style=\"font-weight:bold;font-family:'Cambria Math'\">Sri Lanka</span><span style=\"font-family:'Cambria Math'\"> (formerly known as </span><span style=\"font-weight:bold;font-family:'Cambria Math'\">Ceylon</span><span style=\"font-family:'Cambria Math'\">) gained independence from </span><span style=\"font-weight:bold;font-family:'Cambria Math'\">British rule</span><span style=\"font-family:'Cambria Math'\"> on </span><span style=\"font-weight:bold;font-family:'Cambria Math'\">4th February 1948</span><span style=\"font-family:'Cambria Math'\">.</span></p><p style=\"margin-top:0pt;margin-left:36pt;margin-bottom:0pt;text-indent:-18pt;line-height:115%;font-size:12pt\"><span style=\"font-family:'Wingdings'\"></span><span style=\"font-family:'Cambria Math'\">After independence, it remained a </span><span style=\"font-weight:bold;font-family:'Cambria Math'\">Dominion under the British Commonwealth</span><span style=\"font-family:'Cambria Math'\">, with the British monarch as the ceremonial head.</span></p><p style=\"margin-top:0pt;margin-left:36pt;margin-bottom:10pt;text-indent:-18pt;line-height:115%;font-size:12pt\"><span style=\"font-family:'Wingdings'\"></span><span style=\"font-family:'Cambria Math'\">It became a </span><span style=\"font-weight:bold;font-family:'Cambria Math'\">Republic</span><span style=\"font-family:'Cambria Math'\"> later in </span><span style=\"font-weight:bold;font-family:'Cambria Math'\">1972</span><span style=\"font-family:'Cambria Math'\">, and the name was officially changed to </span><span style=\"font-weight:bold;font-family:'Cambria Math'\">Sri Lanka</span><span style=\"font-family:'Cambria Math'\">.</span></p><p style=\"margin-top:0pt;margin-bottom:10pt;line-height:115%;font-size:12pt\"><span style=\"font-weight:bold;text-decoration:underline;font-family:'Cambria Math'\">Additional Facts:</span></p><p style=\"margin-top:0pt;margin-left:36pt;margin-bottom:0pt;text-indent:-18pt;line-height:115%;font-size:12pt\"><span style=\"font-family:'Wingdings'\"></span><span style=\"font-family:'Cambria Math'\">Sri Lanka was under </span><span style=\"font-weight:bold;font-family:'Cambria Math'\">British colonial rule</span><span style=\"font-family:'Cambria Math'\"> from 1815 to 1948.</span></p><p style=\"margin-top:0pt;margin-left:36pt;margin-bottom:0pt;text-indent:-18pt;line-height:115%;font-size:12pt\"><span style=\"font-family:'Wingdings'\"></span><span style=\"font-weight:bold;font-family:'Cambria Math'\">Don Stephen Senanayake</span><span style=\"font-family:'Cambria Math'\"> became the first </span><span style=\"font-weight:bold;font-family:'Cambria Math'\">Prime Minister</span><span style=\"font-family:'Cambria Math'\"> of independent Ceylon.</span></p><p style=\"margin-top:0pt;margin-left:36pt;margin-bottom:10pt;text-indent:-18pt;line-height:115%;font-size:12pt\"><span style=\"font-family:'Wingdings'\"></span><span style=\"font-weight:bold;font-family:'Cambria Math'\">National Day</span><span style=\"font-family:'Cambria Math'\"> is celebrated annually on </span><span style=\"font-weight:bold;font-family:'Cambria Math'\">4th February</span><span style=\"font-family:'Cambria Math'\">.</span></p>"
    },
    {
        "question": "<span style=\"font-family:'Cambria Math'\"> To which neighbouring country was the Indian Peace Keeping Force (IPKF) sent in the year 1987?</span><p style=\"margin-top:0pt;margin-bottom:10pt;line-height:115%;font-size:12pt\"><span style=\"font-family:'Cambria Math'\">SSC CGL17/08/2021 (Evening)</span></p>",
        "option_1": "<span style=\"font-family:'Cambria Math'\"> Nepal</span>",
        "option_2": "<span style=\"font-family:'Cambria Math'\"> Sri Lanka</span>",
        "option_3": "<span style=\"font-family:'Cambria Math'\"> Bhutan</span>",
        "option_4": "<span style=\"font-family:'Cambria Math'\"> Burma</span>",
        "option_5": "",
        "answer": "2",
        "solution": "<p style=\"margin-top:0pt;margin-left:36pt;margin-bottom:0pt;text-indent:-18pt;line-height:115%;font-size:12pt\"><span style=\"font-family:'Wingdings'\"></span><span style=\"font-family:'Cambria Math'\">The </span><span style=\"font-weight:bold;font-family:'Cambria Math'\">Indian Peace Keeping Force (IPKF)</span><span style=\"font-family:'Cambria Math'\"> was deployed to </span><span style=\"font-weight:bold;font-family:'Cambria Math'\">Sri Lanka</span><span style=\"font-family:'Cambria Math'\"> in </span><span style=\"font-weight:bold;font-family:'Cambria Math'\">1987</span><span style=\"font-family:'Cambria Math'\"> under the </span><span style=\"font-weight:bold;font-family:'Cambria Math'\">Indo–Sri Lanka Accord</span><span style=\"font-family:'Cambria Math'\"> signed between </span><span style=\"font-weight:bold;font-family:'Cambria Math'\">Prime Minister Rajiv Gandhi</span><span style=\"font-family:'Cambria Math'\"> and </span><span style=\"font-weight:bold;font-family:'Cambria Math'\">Sri Lankan President J.R. Jayewardene</span><span style=\"font-family:'Cambria Math'\">.</span></p><p style=\"margin-top:0pt;margin-left:36pt;margin-bottom:0pt;text-indent:-18pt;line-height:115%;font-size:12pt\"><span style=\"font-family:'Wingdings'\"></span><span style=\"font-family:'Cambria Math'\">The aim was to help </span><span style=\"font-weight:bold;font-family:'Cambria Math'\">disarm the LTTE</span><span style=\"font-family:'Cambria Math'\"> (Liberation Tigers of Tamil Eelam) and bring peace to Sri Lanka's </span><span style=\"font-weight:bold;font-family:'Cambria Math'\">civil war-hit northern and eastern regions</span><span style=\"font-family:'Cambria Math'\">.</span></p><p style=\"margin-top:0pt;margin-left:36pt;margin-bottom:10pt;text-indent:-18pt;line-height:115%;font-size:12pt\"><span style=\"font-family:'Wingdings'\"></span><span style=\"font-family:'Cambria Math'\">The mission, however, faced heavy resistance from LTTE and resulted in a prolonged conflict.</span></p><p style=\"margin-top:0pt;margin-bottom:10pt;line-height:115%;font-size:12pt\"><span style=\"font-weight:bold;text-decoration:underline;font-family:'Cambria Math'\">Additional Facts:</span></p><p style=\"margin-top:0pt;margin-left:36pt;margin-bottom:0pt;text-indent:-18pt;line-height:115%;font-size:12pt\"><span style=\"font-family:'Wingdings'\"></span><span style=\"font-family:'Cambria Math'\">IPKF operations lasted from </span><span style=\"font-weight:bold;font-family:'Cambria Math'\">1987 to 1990</span><span style=\"font-family:'Cambria Math'\">.</span></p><p style=\"margin-top:0pt;margin-left:36pt;margin-bottom:0pt;text-indent:-18pt;line-height:115%;font-size:12pt\"><span style=\"font-family:'Wingdings'\"></span><span style=\"font-family:'Cambria Math'\">The mission was controversial and led to </span><span style=\"font-weight:bold;font-family:'Cambria Math'\">India withdrawing forces in 1990</span><span style=\"font-family:'Cambria Math'\">.</span></p><p style=\"margin-top:0pt;margin-left:36pt;margin-bottom:10pt;text-indent:-18pt;line-height:115%;font-size:12pt\"><span style=\"font-family:'Wingdings'\"></span><span style=\"font-family:'Cambria Math'\">Rajiv Gandhi was later </span><span style=\"font-weight:bold;font-family:'Cambria Math'\">assassinated by LTTE in 1991</span><span style=\"font-family:'Cambria Math'\"> as a reaction to IPKF intervention.</span></p>"
    },
    {
        "question": "<span style=\"font-family:'Cambria Math'\"> In which year was a new Constitution adopted in Sri Lanka creating the 'Democratic The Socialist Republic of Sri Lanka'?</span><p style=\"margin-top:0pt;margin-bottom:10pt;line-height:115%;font-size:12pt\"><span style=\"font-family:'Cambria Math'\">SSC CHSL 15/04/2021 (Evening)</span></p>",
        "option_1": "<span style=\"font-family:'Cambria Math'\"> 1978 </span>",
        "option_2": "<span style=\"font-family:'Cambria Math'\"> 1965 </span>",
        "option_3": "<span style=\"font-family:'Cambria Math'\"> 1982 </span>",
        "option_4": "<span style=\"font-family:'Cambria Math'\"> 1980</span>",
        "option_5": "",
        "answer": "1",
        "solution": "<p style=\"margin-top:0pt;margin-left:36pt;margin-bottom:0pt;text-indent:-18pt;line-height:115%;font-size:12pt\"><span style=\"font-family:'Wingdings'\"></span><span style=\"font-family:'Cambria Math'\">In </span><span style=\"font-weight:bold;font-family:'Cambria Math'\">1978</span><span style=\"font-family:'Cambria Math'\">, Sri Lanka adopted a </span><span style=\"font-weight:bold;font-family:'Cambria Math'\">new Constitution</span><span style=\"font-family:'Cambria Math'\">, officially changing the country’s name to the </span><span style=\"font-weight:bold;font-family:'Cambria Math'\">Democratic Socialist Republic of Sri Lanka</span><span style=\"font-family:'Cambria Math'\">.</span></p><p style=\"margin-top:0pt;margin-left:36pt;margin-bottom:0pt;text-indent:-18pt;line-height:115%;font-size:12pt\"><span style=\"font-family:'Wingdings'\"></span><span style=\"font-family:'Cambria Math'\">This Constitution introduced a </span><span style=\"font-weight:bold;font-family:'Cambria Math'\">Presidential form of government</span><span style=\"font-family:'Cambria Math'\">, replacing the earlier parliamentary system.</span></p><p style=\"margin-top:0pt;margin-left:36pt;margin-bottom:10pt;text-indent:-18pt;line-height:115%;font-size:12pt\"><span style=\"font-family:'Wingdings'\"></span><span style=\"font-family:'Cambria Math'\">The new system gave </span><span style=\"font-weight:bold;font-family:'Cambria Math'\">executive powers to the President</span><span style=\"font-family:'Cambria Math'\">, making it a </span><span style=\"font-weight:bold;font-family:'Cambria Math'\">semi-presidential democracy</span><span style=\"font-family:'Cambria Math'\">.</span></p><p style=\"margin-top:0pt;margin-bottom:10pt;line-height:115%;font-size:12pt\"><span style=\"font-weight:bold;text-decoration:underline;font-family:'Cambria Math'\">Additional Facts:</span></p><p style=\"margin-top:0pt;margin-left:36pt;margin-bottom:0pt;text-indent:-18pt;line-height:115%;font-size:12pt\"><span style=\"font-family:'Wingdings'\"></span><span style=\"font-family:'Cambria Math'\">The </span><span style=\"font-weight:bold;font-family:'Cambria Math'\">1978 Constitution</span><span style=\"font-family:'Cambria Math'\"> is Sri Lanka’s </span><span style=\"font-weight:bold;font-family:'Cambria Math'\">second republican constitution</span><span style=\"font-family:'Cambria Math'\">.</span></p><p style=\"margin-top:0pt;margin-left:36pt;margin-bottom:0pt;text-indent:-18pt;line-height:115%;font-size:12pt\"><span style=\"font-family:'Wingdings'\"></span><span style=\"font-weight:bold;font-family:'Cambria Math'\">J.R. Jayewardene</span><span style=\"font-family:'Cambria Math'\"> became the first Executive President under this Constitution.</span></p><p style=\"margin-top:0pt;margin-left:36pt;margin-bottom:10pt;text-indent:-18pt;line-height:115%;font-size:12pt\"><span style=\"font-family:'Wingdings'\"></span><span style=\"font-family:'Cambria Math'\">The constitution also established </span><span style=\"font-weight:bold;font-family:'Cambria Math'\">independent commissions</span><span style=\"font-family:'Cambria Math'\"> for police, elections, etc.</span></p>"
    },
    {
        "question": "<span style=\"font-family:'Cambria Math'\"> In which year did Nepal adopt its first democratic constitution?</span><p style=\"margin-top:0pt;margin-bottom:10pt;line-height:115%;font-size:12pt\"><span style=\"font-family:'Cambria Math'\">SSC CHSL 11/8/2021 (Evening)</span></p>",
        "option_1": "<span style=\"font-family:'Cambria Math'\"> 2010 </span>",
        "option_2": "<span style=\"font-family:'Cambria Math'\"> 2015 </span>",
        "option_3": "<span style=\"font-family:'Cambria Math'\"> 2013 </span>",
        "option_4": "<span style=\"font-family:'Cambria Math'\"> 2017</span>",
        "option_5": "",
        "answer": "2",
        "solution": "<p style=\"margin-top:0pt;margin-left:36pt;margin-bottom:0pt;text-indent:-18pt;line-height:115%;font-size:12pt\"><span style=\"font-family:'Wingdings'\"></span><span style=\"font-family:'Cambria Math'\">Nepal adopted its </span><span style=\"font-weight:bold;font-family:'Cambria Math'\">first democratic constitution</span><span style=\"font-family:'Cambria Math'\"> on </span><span style=\"font-weight:bold;font-family:'Cambria Math'\">20th September 2015</span><span style=\"font-family:'Cambria Math'\">, officially declaring itself a </span><span style=\"font-weight:bold;font-family:'Cambria Math'\">Federal Democratic Republic</span><span style=\"font-family:'Cambria Math'\">.</span></p><p style=\"margin-top:0pt;margin-left:36pt;margin-bottom:0pt;text-indent:-18pt;line-height:115%;font-size:12pt\"><span style=\"font-family:'Wingdings'\"></span><span style=\"font-family:'Cambria Math'\">This marked the end of monarchy and the establishment of a </span><span style=\"font-weight:bold;font-family:'Cambria Math'\">multi-party democratic system</span><span style=\"font-family:'Cambria Math'\">.</span></p><p style=\"margin-top:0pt;margin-left:36pt;margin-bottom:0pt;text-indent:-18pt;line-height:115%;font-size:12pt\"><span style=\"font-family:'Wingdings'\"></span><span style=\"font-family:'Cambria Math'\">The constitution introduced:</span></p><p style=\"margin-top:0pt;margin-left:54pt;margin-bottom:0pt;text-indent:-18pt;line-height:115%;font-size:12pt\"><span style=\"font-family:'Wingdings'\"></span><span style=\"font-weight:bold;font-family:'Cambria Math'\">Federal structure with 7 provinces</span></p><p style=\"margin-top:0pt;margin-left:54pt;margin-bottom:0pt;text-indent:-18pt;line-height:115%;font-size:12pt\"><span style=\"font-family:'Wingdings'\"></span><span style=\"font-weight:bold;font-family:'Cambria Math'\">Fundamental rights and duties</span></p><p style=\"margin-top:0pt;margin-left:54pt;margin-bottom:10pt;text-indent:-18pt;line-height:115%;font-size:12pt\"><span style=\"font-family:'Wingdings'\"></span><span style=\"font-weight:bold;font-family:'Cambria Math'\">Parliamentary system of government</span></p><p style=\"margin-top:0pt;margin-bottom:10pt;line-height:115%;font-size:12pt\"><span style=\"font-weight:bold;text-decoration:underline;font-family:'Cambria Math'\">Additional Facts:</span></p><p style=\"margin-top:0pt;margin-left:36pt;margin-bottom:0pt;text-indent:-18pt;line-height:115%;font-size:12pt\"><span style=\"font-family:'Wingdings'\"></span><span style=\"font-family:'Cambria Math'\">The constitution was framed by the </span><span style=\"font-weight:bold;font-family:'Cambria Math'\">Constituent Assembly of Nepal</span><span style=\"font-family:'Cambria Math'\">, which had 601 members.</span></p><p style=\"margin-top:0pt;margin-left:36pt;margin-bottom:10pt;text-indent:-18pt;line-height:115%;font-size:12pt\"><span style=\"font-family:'Wingdings'\"></span><span style=\"font-family:'Cambria Math'\">It was the result of years of political struggle, especially after the </span><span style=\"font-weight:bold;font-family:'Cambria Math'\">People's Movement of 2006</span><span style=\"font-family:'Cambria Math'\"> and </span><span style=\"font-weight:bold;font-family:'Cambria Math'\">abolition of monarchy in 2008</span><span style=\"font-family:'Cambria Math'\">.</span></p>"
    }
